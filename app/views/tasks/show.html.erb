<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @task.category.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Due Date:</strong>
  <%= @task.start_time %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Task budget:</strong>
  <%= @task.task_budget %>
</p>

<p>
  <strong>Is Complete:</strong>
  <%= @task.complete.to_s %>
</p>

<%= link_to 'Edit', edit_task_path(@task) %> |   <%= link_to 'Destroy', @task, method: :delete, data: { confirm: 'Are you sure?' } %> |  <%= link_to 'Back', tasks_path %>

<% if @task.complete == false %>
  <form action="<%= @task.id%>/complete_task" method="get">
    <input type="submit" value="Complete Task" class='btn btn-primary'/>
  </form>
<% elsif @task.complete == true %>
  <h4 style="color: gray;">Task Complete.</h4>
<% end %>
