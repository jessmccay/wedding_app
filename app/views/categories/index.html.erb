<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="row">
      <div class="col-sm-8">
        <h1 style="text-align: center;">Task Categories</h1>
      </div>
      <div class="col-sm-4">
        <h2><%= button_to 'New Category', new_category_path, class: 'btn btn-default' %></h2>
      </div>
    </div>
    <br>
    <br>
    <% for i in 0...@categories.length do %>
    <ul class="nav nav-stacked" id= "<%= i %>" >
        <li class="panel">
            <a data-toggle="collapse" data-parent="#<%= i %>" href="#link<%=i%>"><%= @categories[i][:name].to_s %></a>
            <ul id="link<%= i %>" class="collapse panel-collapse">
              <h5><%= link_to 'New Task', new_task_path%></h5>
              <% @categories[i].tasks.each do |task| %>
                  <li><p><a href="tasks/<%= task.id%>"><%= task.name %></a></p></li>
                <% end %>
            </ul>
          </li>
    </ul>
    <% end %>
  </div>

  <div class="col-md-6">
    <h1 style="text-align: center;">Completed Tasks</h1>
    <br>
    <br>
    <% @categories.each do |category| %>
      <% category.tasks.each do |task| %>
        <% if task.complete == true %>
          <a href="tasks/<%= task.id %>"><div class="row">
            <div class="col-lg-5">
              <p style="text-align: right;"> <%= category.name %> </p>
            </div>
            <div class="col-lg-7">
              <p style="text-align: left;"> <%= task.name %>: completed on DATE </p>
            </div>
          </div></a>
          <hr>
          <br>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
